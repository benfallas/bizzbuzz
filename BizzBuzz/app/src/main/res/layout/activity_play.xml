<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="firstandroid.com.bizzbuzz.PlayActivity">

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textSize="55sp"
        android:id="@+id/number_display"
        android:textAlignment="center"
        android:elegantTextHeight="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/buzz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buzz_button"
        android:layout_alignBaseline="@+id/bizz_button"
        android:layout_alignBottom="@+id/bizz_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp" />

    <Button
        android:text="@string/bizz_buzz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:id="@+id/bizz_buzz_button"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/buzz_button" />

    <Button
        android:text="@string/bizz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bizz_button"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="29dp"
        android:layout_above="@+id/next_button"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dip"
        android:id="@+id/next_button"
        android:layout_alignBaseline="@+id/bizz_buzz_button"
        android:layout_alignBottom="@+id/bizz_buzz_button"
        android:layout_alignStart="@+id/bizz_button" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/coolimoji"
        android:id="@+id/cool_emoji"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
